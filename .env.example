# Global Environment Variables for the Slot Machine Application

# --- Database Configuration ---
# Your MariaDB/MySQL database host (e.g., localhost, or a remote IP)
DB_HOST=your_database_host

# The username for the database
DB_USER=your_database_user

# The password for the database user
DB_PASSWORD=your_database_password

# The name of the database
DB_NAME=redtedcasino

# --- Application Security ---
# A strong, secret password for the admin panel (/admin.html)
ADMIN_PASSWORD=a_very_secure_admin_password

# A long, random, and secret string for signing JWT tokens
JWT_SECRET=a_super_long_and_secret_jwt_string